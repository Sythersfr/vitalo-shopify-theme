{{ 'vitalo-custom.css' | asset_url | stylesheet_tag }}

<section class="vitalo-stats">
  <div class="vitalo-stats__inner">
    {% for block in section.blocks %}
      <div class="vitalo-animate vitalo-animate-delay-{{ forloop.index }}" {{ block.shopify_attributes }}>
        <div class="vitalo-stat__number">{{ block.settings.number }}</div>
        <div class="vitalo-stat__label">{{ block.settings.label }}</div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Vitalo Stats",
  "settings": [],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "50,000+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Happy Customers"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vitalo Stats",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "number": "50,000+",
            "label": "Happy Customers"
          }
        },
        {
          "type": "stat",
          "settings": {
            "number": "6",
            "label": "Unique Formulas"
          }
        },
        {
          "type": "stat",
          "settings": {
            "number": "90-Day",
            "label": "Money-Back Guarantee"
          }
        },
        {
          "type": "stat",
          "settings": {
            "number": "100%",
            "label": "Transparent Labels"
          }
        }
      ]
    }
  ]
}
{% endschema %}
