{{ 'vitalo-custom.css' | asset_url | stylesheet_tag }}

<section class="vitalo-trust-strip">
  <div class="vitalo-trust-strip__inner">
    {% for block in section.blocks %}
      <div class="vitalo-trust-badge vitalo-animate vitalo-animate-delay-{{ forloop.index }}" {{ block.shopify_attributes }}>
        <div class="vitalo-trust-badge__icon">
          {% if block.settings.icon == 'lab' %}
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 3h6v7l5 8.5a1.5 1.5 0 01-1.3 2.5H5.3a1.5 1.5 0 01-1.3-2.5L9 10V3z"/>
              <line x1="9" y1="3" x2="15" y2="3"/>
            </svg>
          {% elsif block.settings.icon == 'shield' %}
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <polyline points="9 12 11 14 15 10"/>
            </svg>
          {% elsif block.settings.icon == 'eye' %}
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          {% else %}
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 11 12 14 22 4"/>
              <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"/>
            </svg>
          {% endif %}
        </div>
        <h3 class="vitalo-trust-badge__title">{{ block.settings.title }}</h3>
        <p class="vitalo-trust-badge__desc">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Vitalo Trust Badges",
  "blocks": [
    {
      "type": "badge",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "lab", "label": "Lab/Testing" },
            { "value": "shield", "label": "Shield/Guarantee" },
            { "value": "eye", "label": "Eye/Transparency" },
            { "value": "check", "label": "Checkmark" }
          ],
          "default": "check"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Trust Badge"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description of this trust element."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vitalo Trust Badges",
      "blocks": [
        {
          "type": "badge",
          "settings": {
            "icon": "lab",
            "title": "Independent 3rd-Party Lab Tested",
            "description": "Every batch is tested by a third-party lab for purity, potency, and contaminants. We publish the results."
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "shield",
            "title": "90-Day Money-Back Guarantee",
            "description": "Try any Vitalo product risk-free. If you're not satisfied, we'll refund every penny. No questions asked."
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "eye",
            "title": "No Hidden Formulas",
            "description": "Every single ingredient and its exact dose is printed on the label. No proprietary blends. No secrets."
          }
        }
      ]
    }
  ]
}
{% endschema %}
