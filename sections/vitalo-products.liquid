{{ 'vitalo-custom.css' | asset_url | stylesheet_tag }}

<section class="vitalo-products">
  <div class="vitalo-products__inner">
    <div class="vitalo-products__header vitalo-animate">
      <h2 class="vitalo-products__title">{{ section.settings.heading }}</h2>
      <p class="vitalo-products__subtitle">{{ section.settings.subheading }}</p>
    </div>

    {% if section.settings.collection != blank %}
      <div class="vitalo-products__grid">
        {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
          <a href="{{ product.url }}" class="vitalo-product-card vitalo-animate vitalo-animate-delay-{{ forloop.index }}">
            <div class="vitalo-product-card__image">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  width="600"
                  height="450"
                  loading="lazy"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag }}
              {% endif %}

              {% if product.metafields.custom.badge %}
                <span class="vitalo-product-card__badge">{{ product.metafields.custom.badge }}</span>
              {% elsif product.tags contains 'best-seller' %}
                <span class="vitalo-product-card__badge">Best Seller</span>
              {% elsif product.tags contains 'new' %}
                <span class="vitalo-product-card__badge">New</span>
              {% endif %}
            </div>

            <div class="vitalo-product-card__body">
              {% if product.type != blank %}
                <div class="vitalo-product-card__category">{{ product.type }}</div>
              {% endif %}

              <h3 class="vitalo-product-card__name">{{ product.title }}</h3>

              {% if product.description != blank %}
                <p class="vitalo-product-card__desc">{{ product.description | strip_html | truncate: 100 }}</p>
              {% endif %}

              <div class="vitalo-product-card__footer">
                <span class="vitalo-product-card__price">{{ product.price | money }}</span>
                <span class="vitalo-product-card__cta">
                  View Details
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <!-- Fallback: Show placeholder product cards -->
      <div class="vitalo-products__grid">
        {% for i in (1..6) %}
          <div class="vitalo-product-card vitalo-animate vitalo-animate-delay-{{ forloop.index }}">
            <div class="vitalo-product-card__image">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
            <div class="vitalo-product-card__body">
              <div class="vitalo-product-card__category">Health & Wellness</div>
              <h3 class="vitalo-product-card__name">Product {{ forloop.index }}</h3>
              <p class="vitalo-product-card__desc">Premium supplement with clinically studied ingredients at full doses.</p>
              <div class="vitalo-product-card__footer">
                <span class="vitalo-product-card__price">$39.00</span>
                <span class="vitalo-product-card__cta">
                  View Details
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.button_label != blank %}
      <div style="text-align: center; margin-top: var(--space-2xl);">
        <a href="{{ section.settings.button_link }}" class="button button--secondary">
          {{ section.settings.button_label }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Vitalo Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Products"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Physician-formulated supplements designed for adults who want to maintain their health, not just react to problems."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6,
      "label": "Products to show"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "View All Button Label",
      "default": "View All Products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "View All Button Link"
    }
  ],
  "presets": [
    {
      "name": "Vitalo Products"
    }
  ]
}
{% endschema %}
