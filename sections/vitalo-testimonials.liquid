{{ 'vitalo-custom.css' | asset_url | stylesheet_tag }}

<section class="vitalo-testimonials">
  <div class="vitalo-testimonials__inner">
    <div class="vitalo-testimonials__header vitalo-animate">
      <h2 class="vitalo-testimonials__title">{{ section.settings.heading }}</h2>
    </div>

    <div class="vitalo-testimonials__grid">
      {% for block in section.blocks %}
        <div class="vitalo-testimonial-card vitalo-animate vitalo-animate-delay-{{ forloop.index }}" {{ block.shopify_attributes }}>
          <div class="vitalo-testimonial-card__stars">&#9733;&#9733;&#9733;&#9733;&#9733;</div>
          <p class="vitalo-testimonial-card__text">"{{ block.settings.quote }}"</p>
          <div class="vitalo-testimonial-card__author">
            <div class="vitalo-testimonial-card__avatar">
              {{ block.settings.name | slice: 0, 1 | upcase }}
            </div>
            <div>
              <div class="vitalo-testimonial-card__name">{{ block.settings.name }}</div>
              {% if block.settings.product_name != blank %}
                <div class="vitalo-testimonial-card__product">{{ block.settings.product_name }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Vitalo Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
