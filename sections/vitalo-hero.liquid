{{ 'vitalo-custom.css' | asset_url | stylesheet_tag }}

<section class="vitalo-hero" id="vitalo-hero">
  <div class="vitalo-hero__content vitalo-animate">
    <div class="vitalo-hero__badge">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
      </svg>
      {{ section.settings.badge_text }}
    </div>

    <h1 class="vitalo-hero__title">
      {{ section.settings.heading }}
    </h1>

    <p class="vitalo-hero__subtitle">
      {{ section.settings.subheading }}
    </p>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="vitalo-hero__cta">
        {{ section.settings.button_label }}
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Vitalo Hero",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Physician-Formulated"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>The Supplement Company That Has <em>Nothing to Hide.</em></p>"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Premium, transparent supplements with full-dose transparency, third-party testing, and a 90-day guarantee. Because we know our products actually work."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Our Products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Vitalo Hero"
    }
  ]
}
{% endschema %}
