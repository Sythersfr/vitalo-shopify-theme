{{ 'vitalo-custom.css' | asset_url | stylesheet_tag }}

<section class="vitalo-cta">
  <div class="vitalo-cta__inner vitalo-animate">
    <h2 class="vitalo-cta__title">{{ section.settings.heading }}</h2>
    <p class="vitalo-cta__text">{{ section.settings.body }}</p>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="vitalo-hero__cta" style="display: inline-flex;">
        {{ section.settings.button_label }}
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Vitalo CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Try Supplements That Actually Work?"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body Text",
      "default": "Join thousands of adults 40+ who trust Vitalo for physician-formulated, transparent supplements backed by a 90-day guarantee."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Vitalo CTA"
    }
  ]
}
{% endschema %}
